<%- include('header') %>
    
      <div class="container">
        <div class="row">
          <h2 class = text-center><%= title%></h2>
            <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading" >
                        <div class="panel-title" >Add New Password Category</div>
                        <div style = "float:right; font-size: 85%; position: relative; top:-10px"></div>
                         </div>  
                    <div class="panel-body" >
                        <form action="/addNewCategory" class="form-horizontal" role="form" method="post" >
                            
                           
                            <div class="form-group">
                              <% if(errors !=''){%>
                                <p style="text-align: center;color:red;"><%= errors.passwordCategory.msg %></p>
                                  <% } %>

                              
                                  <% if(success !=''){%>
                                    <p style="text-align: center;color:green;"><%= success %></p>
                                      <% } %>
                                <label for="username" class="col-md-3 control-label">Category Name</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="passwordCategory" placeholder="Enter Here">
                                </div>
                            </div>
  
       
                            <div class="form-group">
                                <!-- Button -->                                        
                                <div class="col-md-offset-3 col-md-9">
                                <input type="submit" name="submit" value="Add Category" class="btn btn-primary">   
                                </div>
                            </div>
  
                            <p><a href='/passwordCategory'>View all category</a></p>
                            
                            
                            
                            
                            
                        </form>
                        
                     </div>
                </div>
  

                <%- include('footer') %>