                            <p><%= success %></p>
                            <%}%>
                           <div class="form-group">
                                <label for="username" class="col-md-3 control-label">Password Category</label>
                                <div class="col-md-9">
                                    <input type="textbox" class="form-control" name="pass_cat"  value = "<%= record.password_category %>" readonly> 
                                </div>
                            </div>
